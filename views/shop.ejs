<!DOCTYPE html>
<html>
  <head>
    <title>shop page</title>
    <link rel="stylesheet" href="/stylesheets/shop.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  </head>

  <body>
    <div class="main">
     <%- include('header.ejs') -%>

      <!------------------Shop content ------------------------>
   

      <div class="shopBox">
        <div class="shop-top">
          <h6 class="filterHead">Filters</h6>
          
          <h6>
            <a style="text-decoration: none; color: gray" href="/">HOME </a> >
            Shop All <span style="color: #9ee281">5154 Items</span>
          </h6>
          <div>Dropdown</div>
        </div>

        <div class="shopContent">
          <div class="filters">
            <div class="priceBoxFilter">
              <h6>Price</h6>
              <ul>
                <li>
                  <span>Rs 499 - Rs 9999</span>
                  <input type="range" name="" id="" />
                </li>
              </ul>
            </div>

            <!-- category -->
            <div class="scrollFilterBox">
              <h6>CATEGORY</h6>
              <ul>
              <% for(var i=0;i<category.length;i++){ %>

                <li><a class="category-link" href="#" data-category-id="<%= category[i].id %>"><%= category[i].category_name %></a></li>

              <%}%>
              </ul>
            </div>

<!------------------ sub-category links start here--------------------------- -->
            <div class="scrollFilterBox">
              <h6>SUB-CATEGORY</h6>
              <ul>
              <% for(var i=0;i<subcategory.length;i++){ %>

                <li><a class="subcategory-link" href="#" data-subcategory-id="<%= subcategory[i].id %>"><%= subcategory[i].subcategory_name %></a></li>

              <%}%>
              </ul>
            </div>
<!-- ----------------sub-category links end here------------------------- -->
          </div>
          <div class="item-content">
            <%- include('product_partial.ejs') -%>
          </div>
        </div>
      </div>
      
      
        
       

      
      <%- include('footer.ejs') -%>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
      integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"
      integrity="sha512-onMTRKJBKz8M1TnqqDuGBlowlH0ohFzMXYRNebz+yOcc5TQr/zAKsthzhuv0hiyUKEiQEQXEynnXCvNTOk50dg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>

    <script src="/javascripts/script.js"></script>
    <script src="/javascripts/shop.js"></script>
  </body>
</html>
